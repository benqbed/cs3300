    <div class="centered paddedForm container border border-dark rounded-3 text-black">
      <h1 class="text-center">Ben Bittles CS 3300 Portfolio Project - Fall 2022</h1><br>

      <div style="padding-left: 2rem;">

        <% if user_signed_in? %>
          
          <div> Welcome <%= current_user.email %> </div>
          <%= button_to "Sign out", destroy_user_session_path, method: :delete %> 

          <div class="container-fluid mt-3">
            <a href="/projects" class="btn btn-default" style="border: 1px solid #808080;" >See Projects</a>
          </div><br>
        
        <% else %>
          <div class="container border border-dark rounded-3 text-black text-center">
            <p>You are not signed in. To continue, please sign in or sign up.</p>
            <a href="/users/sign_in">Sign in</a>
          </div><br>
        <% end %>

      </div>
    </div>

  </body>

